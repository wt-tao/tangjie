<!--pages/main/main.wxml-->
<view class='head'>
     <swiper indicator-dots="true" autoplay="true" interval="3000" indicator-color='white' indicator-active-color='#FF7F01' duration="1000" class="swiper-item" circular="true">
          <block wx:for="{{banner}}" wx:for-index="index">
              <swiper-item>
                <image src="{{item}}" class="slide-image" style='width:100%;height:100%' mode="aspectFill" />
              </swiper-item>
          </block>
     </swiper>
</view>
<!-- 横向滑动 -->
<view class='list flex' >
     <scroll-view scroll-x style=" white-space: nowrap; display: flex">
    <block wx:for='{{list}}'>
      <image src='{{item.img}}'  bindtap='list'  id='{{item.id}}' style='display: inline-block;margin-left:25rpx;width:60%' mode='widthFix'/>
    </block>
    <image src='../../img/gdwj@3x (1).png'  bindtap='list1'  id='{{item.id}}' style='width:100rpx;display: inline-block;margin-left:25rpx;' mode='widthFix'/>
  </scroll-view>
</view>

<view class='list flex'>
    <view class='com' bindtap='myPresentation'>
        <image src='../../img/wenjuankb@3x (1).png' style='width:60rpx;margin-left:110rpx;margin-top:20rpx;' mode='widthFix'/>
        <view class='com_text' style='line-height: 65rpx;'>我的报告</view>
    </view>
     <view class='com' bindtap='user'>
        <image src='../../img/wenjuankb@3x (2).png' style='width:60rpx;margin-left:100rpx;margin-top:20rpx;' mode='widthFix'/>
        <view class='com_text'>个人中心</view>
    </view>
     <view class='com' bindtap='doctor'>
        <image src='../../img/wenjuankb@3x (3).png' style='width:60rpx;margin-left:100rpx;margin-top:20rpx;' mode='widthFix'/>
        <view class='com_text'>医生查询入口</view>
    </view>
</view>
<view style='height:20rpx;width:100%;background-color: #EFEFF4'></view>

<view class='div'  bindtap='product_detail' id='1'>
  <view class='div_top flex'>
      <view class='div_icon'></view>
      <view style='margin-left:30rpx;'>健康产品</view>
  </view>
  <view class='div_img'></view>
  <view class='div_title'>遗传学乳腺癌/卵巢癌（23个基因）检测</view>
  <view class='div_count'>检测是否具有与乳腺癌/卵巢癌密切相关的基因突变</view>
  <view class='div_price flex'>
      <view class='num_day'>10个工作日</view>
      <view class='num_money'>￥6500.00</view>
  </view>
</view>

<view class='div'>
  <view class='div_top flex'>
      <view class='div_icon'></view>
      <view style='margin-left:30rpx;'>健康产品</view>
  </view>
  <view class='div_img'></view>
  <view class='div_title'>遗传学乳腺癌/卵巢癌（23个基因）检测</view>
  <view class='div_count'>检测是否具有与乳腺癌/卵巢癌密切相关的基因突变</view>
  <view class='div_price flex'>
      <view class='num_day'>10个工作日</view>
      <view class='num_money'>￥6500.00</view>
  </view>
</view>
<view style='height:20rpx;width:100%;'></view>
